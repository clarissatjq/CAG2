<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Pet List App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid"> 
          <a class="navbar-brand" href="/">Pet List App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/pet">Add new pet</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Pet Details</h2></div>
        <br>
        <% if (pet) { %> <!-- Check if pet data exists -->
            <div>
                <p><b>Pet Name:</b><br> <%= pet.name %></p>
                <p><b>Pet Image:</b><br> <img src = "/images/<%= pet.image %>" width="50%"></p>
                <p><b>Date of birth:</b><br> <%= pet.dob %></p>
                <p><b>Pet Age:</b><br> <%= pet.age %></p>
                <p><b>Pet Breed:</b><br> <%= pet.breed %></p>
                <p><b>Contact:</b><br><%= pet.contact %></p> 
            </div>
        <% } else { %>
            <p>No product found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
